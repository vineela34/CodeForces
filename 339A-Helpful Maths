#include <cmath>
#include <cstdio>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    string str;
    cin>>str;
    int len = str.length();
    for(int i=0;i<len;i+=2){
        for(int j=0;j<len-i-2;j+=2)
            if(str[j]>str[j+2])
                swap(str[j],str[j+2]);            
    }
    cout<<str;
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    return 0;
}
